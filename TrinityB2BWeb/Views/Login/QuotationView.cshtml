@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "QuotationView";
}

<style>
    #TableQuotation_Details tbody {
        font-size: 12px;
    }

    table th {
        border: 1px solid #9b9b9b !important;
        background-color: #d5d5d5;
    }

    table td {
        border: 1px solid #9b9b9b !important;
    }

    #imgtd {
        background-color: #ebebeb;
    }

    #designimg {
        background-color: white;
    }

    .bdr1 {
            border-bottom:none !important;
    }

    .bdr2 {
            border-top:none !important;
    }

</style>

<div>
    <div>
        <form>
            <div class="container-fluid" style="margin:20px; border:1px solid #9b9b9b; padding:20px; background-color: #d5d5d5;">
                <div class="form-group row">
                    <label for="QuotationDate" class="col-sm-2"><strong>Quotation Date : </strong></label>
                    <div class="col-sm-2" id="QuotationDate"></div>
                    <label for="QuotationNo" class="col-sm-2"><strong>Quotation No : </strong></label>
                    <div class="col-sm-2" id="QuotationNo"></div>
                </div>
                <div class="form-group row">
                    <label for="quotationType" class="col-sm-2"><strong>Quotation Type : </strong></label>
                    <div class="col-sm-2" id="quotationType"></div>
                    <label for="QuotationBy" class="col-sm-2"><strong>Quotation By : </strong></label>
                    <div class="col-sm-2" id="QuotationBy"></div>
                </div>
                <div class="form-group row">
                    <label for="DueDays" class="col-sm-2"><strong>Due Days : </strong></label>
                    <div class="col-sm-2" id="DueDays"></div>
                </div>
            </div>
        </form>
    </div>

    <div id="QuotatinView" style="">
        <div class="form-group row">
            <div class="col-md-12 table-responsive">
                <table class="table table-bordered table-responsive" id="TableQuotation_ItemsBody" style=" background-color:#ededed; margin-bottom:20px;">
                    <thead>
                        <tr>
                            <th style="text-align:center;" width="15%">Image</th>
                            <th style="text-align:center;" width="85%">Description</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <input type="hidden" id="hdnQuotationMasterId" value="@ViewBag.UNIQUEID" />


    @section Scripts{
        <script src="~/Scripts/Login/QuotationView.js?v=@DateTime.UtcNow"></script>
    }
</div>


